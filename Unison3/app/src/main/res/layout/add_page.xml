<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bx"
    >



    <EditText
        android:id="@+id/editevent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:inputType="text"
        android:textColorHint="@color/hint"
        android:hint="Event Title"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up_background"
        android:padding="10dp"/>


    <EditText
        android:id="@+id/locationID"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        android:maxLines="1"
        android:inputType="text"
        android:textColorHint="@color/hint"
        android:hint="Location"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sign_up_background"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/colorid"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="112dp"
        android:textSize="18dp"
        android:drawablePadding="10dp"
        android:paddingLeft="7dp"
        android:paddingTop="11dp"
        android:background="@drawable/sign_up_background"
        android:text="Color"
        />
    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/locationID"
        android:layout_marginLeft="80dp"
        android:padding="15dp"
        >
        <RadioButton
            android:id="@+id/redid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:buttonTint="#FF4D4D"
            />
        <RadioButton
            android:id="@+id/blueid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:buttonTint="#0080ff"
            />
        <RadioButton
            android:id="@+id/greenid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:buttonTint="#00ff80"
            />
        <RadioButton
            android:id="@+id/orangeid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:buttonTint="#FFA500"
            />
    </RadioGroup>

    <Button
        android:id="@+id/dateid"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="180dp"
        android:text="Date"
        android:background="@drawable/sign_up_background"
        />
    <Button
        android:id="@+id/startid"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="220dp"
        android:text="Start Time"
        android:background="@drawable/sign_up_background"
        />
    <Button
        android:id="@+id/endid"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="260dp"
        android:text="End Time"
        android:background="@drawable/sign_up_background"
        />
    <TextView
        android:id="@+id/errorthing"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="260dp"
        android:textColor="#ff0006"
        />
    <Button
        android:id="@+id/addButtonid"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="300dp"
        android:text="Add" />

    <Button
        android:id="@+id/addfriendbtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD FRIENDS"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="360dp"/>

</RelativeLayout>