<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:layout_marginTop="100dp"
    android:background="@drawable/dialog_bx"
    android:backgroundTint="@color/topColor">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="Would you like to delete this event?"
        android:id="@+id/deleteInquiry"
        />
    <Button
        android:background="@drawable/button_background"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/deleteInquiry"
        android:id="@+id/okID"
        android:text="Yes"
        android:layout_marginLeft="80dp"
        />
    <Button
        android:background="@drawable/sign_up_background"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:layout_below="@+id/deleteInquiry"
        android:layout_toRightOf="@+id/okID"
        android:layout_marginLeft="10dp"
        android:id="@+id/cancelID"
        />

</RelativeLayout>