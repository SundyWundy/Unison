<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProfilePage">
>



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_profile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"
        android:src="@drawable/ic_person_grey_24dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#6DD6BE"/>
    <Button
        android:id="@+id/viewname"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="55dp"
        android:textAllCaps="false"
        android:backgroundTint="#0000"
        android:background="#0000"
        android:stateListAnimator="@null"
        android:textColor="#6DD6BE"
        android:text=""
        />
    <Button
        android:id="@+id/viewemail"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="55dp"
        android:textAllCaps="false"
        android:backgroundTint="#0000"
        android:background="#0000"
        android:stateListAnimator="@null"
        android:textColor="#6DD6BE"
        android:text=""
        />



    <Button
        android:id="@+id/profile_signout"
        android:background="@drawable/sign_up_background"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:textColor="@android:color/white"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="100dp"
        />


    <!--<Button
        android:id="@+id/profile_editprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_marginLeft="300dp"
        android:backgroundTint="#0000"
        android:background="#0000"
        android:stateListAnimator="@null"
        android:textColor="#6DD6BE"
        />
    -->
    <Button
        android:id="@+id/profile_changepassword"
        android:background="@drawable/button_background"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="450dp"

        />



</RelativeLayout>