<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:layout_marginTop="100dp"
    android:background="@drawable/dialog_bx">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:id="@+id/titleinfo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleinfo"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/locationinfo"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/locationinfo"
        android:gravity="center"
        android:id="@+id/timeinfo"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/sign_up_background"
        android:text="Edit"
        android:id="@+id/editbttn"
        />

    <Button
        android:id="@+id/viewmembers_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Group Members"
        />


</RelativeLayout>